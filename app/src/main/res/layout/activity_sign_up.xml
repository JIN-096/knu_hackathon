<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">


    <Button
        android:id="@+id/btn_mentor_signup"
        style="@style/signup_buttonstyle"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/knu_red"
        android:text="@string/mentor_signup"
        app:layout_constraintBottom_toTopOf="@+id/btn_mentee_signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_mentee_signup"
        android:layout_width="200dp"
        android:layout_height="70dp"
        style="@style/signup_buttonstyle"
        android:text="@string/mentee_signup"
        android:textColor="@color/button_text_color"
        android:backgroundTint="@color/knu_red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_mentor_signup" />
</androidx.constraintlayout.widget.ConstraintLayout>